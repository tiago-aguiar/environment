;; init-evil.el -- My evil mode configuration.
;; Comment:
;; Code:

(defun air--config-evil ()
  "Configure evil mode"

  (setq evil-normal-state-cursor '(box "black")
	evil-insert-state-cursor '(box "blue")))

(use-package evil
  :ensure t
  :config
  (add-hook 'evil-mode-hook 'air--config-evil)
  (evil-mode 1))

(provide 'init-evil)
;; init-evil.el ends here
